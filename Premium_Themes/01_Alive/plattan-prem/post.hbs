{{!< default}}
{{> header}}

<section class="page-content primary" role="main">

  {{#post}}

    <article id="post-{{id}}" class="post {{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">

        <div class="content-wrapper">
          {{#if image}}
          <div class="post-thumbnail">
            <img src="{{image}}" alt="{{title}}" title="{{title}}" />
          </div>
          {{/if}}
          <h2 class="post-title">
            {{title}}
          </h2>

          <div class="post-meta">
          Posted
          <span datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
            {{date format='dddd'}} {{date format='MMM DD, YYYY'}}
          </span>
                {{#if tags}}
                  <div class="post-tags">
                    Tags:
                      {{tags seperator=", "}}
                  </div>
                {{/if}}
        </div>

          <div class="post-content" itemprop="articleBody">

          {{content}}

        </div>

          <aside class="post-aside">

          {{> share}}

          <div id="disqus_thread" class="comments"></div>
          <script type="text/javascript">
            var disqus_shortname = 'yourlibrarycard';
            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          </script>

          </aside>

      </div>

    </article>

  {{/post}}

  {{> footer}}

</section>
