{{!< default}}
<div id="main-content">
    {{! The main content area on the homepage }}
    <main class="body-content" role="main">
        {{!-- {{>filter-control}} --}}
        {{! Each post will be output using this markup }}
        <div id="isotope-content">
            {{#foreach posts}}
            <div class="item-list {{post_class}}" {{#if tags}}data-tags="{{#foreach tags}}{{name}},{{/foreach}}"{{/if}} data-publish-date="{{published_at}}" data-title="{{title}}">
                <div class="wrap{{#if image}} formated{{/if}}">
                    <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
                    <div class="post-excerpt">
                        {{#if image}}
                        <div class="post-photo">
                            <img src="{{image}}" alt="post-cover" class="img-responsive">
                            <div class="mask">
                                <a class="preview magnific-popup" href="{{image}}">
                                    <i class="fa fa-search"></i>
                                </a>
                                <a class="detail" href="{{url}}">
                                    <i class="fa fa-link"></i>
                                </a>
                            </div>
                        </div>
                        {{else}}
                            <div class="hidden-cover">{{content words="0"}}</div>
                        {{/if}}
                        {{excerpt words="40"}} ... <a class="read-more" href="{{url}}">Read more Â»</a>
                    </div>
                    {{>home-meta-post}}
                </div>
            </div>
            {{/foreach}}
        </div>
        {{#if pagination}}
            {{pagination}}
        {{/if}}
    </main>
</div>