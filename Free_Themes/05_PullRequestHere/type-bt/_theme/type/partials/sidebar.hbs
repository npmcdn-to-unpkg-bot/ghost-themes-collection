		{{#is "post"}}
			{{> widgets/widget-related-posts}}
		{{/is}}
		{{#is "page, index, author, tag"}}
			{{> widgets/widget-latest-posts}}
		{{/is}}
	{{/is}}

	{{> widgets/widget-about}}
	
	{{> widgets/widget-twitter}}

	{{> widgets/widget-must-read}}

	{{> widgets/widget-side-menu}}

	{{> widgets/widget-dribbble}}
</div>