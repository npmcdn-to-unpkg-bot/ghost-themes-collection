{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
{{#if @first}}
  <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
            {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image"  />{{/if}}
               {{#author}} {{name}} {{/author}}
               <span class="post-category"> {{tags prefix=""}}</span>
               <span class="post-category" >{{date format="DD.MM.YYYY"}}</span>
            </section>
        </header>

        <section class="post-content">
            {{content}}
        </section>

    </article>
{{else}}
<article class="{{post_class}}">
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <section class="post-meta">
        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image"  />{{/if}}
        {{author}}
        <span class="post-category"> {{tags prefix=""}}</span>
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD.MM.YYYY"}}</time>
        </section>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt words="50"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
    </footer>
</article>
{{/if}}
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
